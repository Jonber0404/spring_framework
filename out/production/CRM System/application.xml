

<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:aop="http://www.springframework.org/schema/aop"
	   xsi:schemaLocation=
			   "http://www.springframework.org/schema/aop
http://www.springframework.org/schema/aop/spring-aop.xsd
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- add your bean definitions here! -->

	<bean id="diaryManagement"
		  class="com.yrgo.services.diary.DiaryManagementServiceMockImpl"/>

	<bean id="callHandling"
		  class="com.yrgo.services.calls.CallHandlingServiceImpl">
			<constructor-arg ref="customerManagement"/>
			<constructor-arg ref="diaryManagement"/>
	</bean>

	<bean id="customerManagement"
		  class="com.yrgo.services.customers.CustomerManagementServiceProductionImpl">
		<constructor-arg ref="customerDao">
		</constructor-arg>
	</bean>


	<bean id="customerDao" class="com.yrgo.dataaccess.CustomerDaoJdbcTemplateImpl"
		  init-method="createTables">
		<constructor-arg ref="jdbcTemplate">
		</constructor-arg>
	</bean>

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
		<property name= "driverClassName" value="org.hsqldb.jdbcDriver" />
		<property name= "url" value
				="jdbc:hsqldb:file:database.dat;shutdown=true" />
		<property name = "username" value="sa"/>
		<property name="password" value ="" />
	</bean>

	<bean id="jdbcTemplate"
		  class="org.springframework.jdbc.core.JdbcTemplate">
		<constructor-arg ref="dataSource" />
	</bean>

	<bean id="performanceTimingAdvice"
		  class="com.yrgo.advice.PerformanceTimingAdvice" />
	<aop:config>
		<aop:aspect ref = "performanceTimingAdvice">
			<aop:around method="performTimingMeasurement"
						pointcut = "execution(* com.yrgo.services..*.*(..))" />
		</aop:aspect>
	</aop:config>

</beans>
